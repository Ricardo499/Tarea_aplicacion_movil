<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="@string/Registro_texto"
        android:textSize="20dp"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/nombre_usuario"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="205dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="@string/Nombre_Usuario"
        android:inputType="textPersonName"
        android:text=""
        />

    <EditText
        android:id="@+id/Correo"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="256dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="@string/Correo_Usuario"
        android:inputType="textPersonName"
        android:text=""
       />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="312dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/contraseña2"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="368dp"
        android:ems="10"
        android:hint="@string/confirm_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="278dp"
        android:layout_height="29dp"
        android:layout_marginTop="424dp"
        android:layout_marginStart="70dp"
        android:gravity="center"
        android:text="@string/Fecha_nacimiento"
        android:textColor="@color/black"
        android:textSize="22dp"
        />

    <Spinner
        android:id="@+id/Nacionalidad"
        style="?android:spinnerStyle"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="550dp"
        android:contentDescription="@string/Ingrese_Datos"
        android:gravity="center"
        android:textColor="#4F4F4F" />

    <Button
        android:id="@+id/btnAceptar"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginStart="80dp"
        android:text="@string/aceptar"
        android:textColor="@color/black"
        android:textSize="22dp"
        />

    <Button
        android:id="@+id/btnCancelar"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="590dp"

        android:text="@string/cancelar"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="257dp"
        android:layout_height="37dp"
        android:layout_marginTop="520dp"
        android:layout_marginStart="75dp"
        android:gravity="center"
        android:text="@string/Nacionalidad"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btnNacimiento"
        style="?android:spinnerStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginStart="75dp"
        android:gravity="center"
        android:onClick="OpenDatePicker"
        android:text="ENERO 01 2020"
        android:textColor="#4F4F4F"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="105dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="150dp"
        android:gravity="center"
        android:background="@drawable/usuario"
        android:contentDescription="@string/todo" />


</RelativeLayout>