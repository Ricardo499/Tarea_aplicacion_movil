<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D3D3D3"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/Ingrese_Datos"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Correo"
        android:layout_width="289dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="395dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/Correo_Usuario"
        android:inputType="textPersonName"
        android:minHeight="48dp"


        />



    <EditText
        android:id="@+id/ContraseÃ±a"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="448dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginStart="90dp"
        android:gravity="center"
        android:text="@string/Registro"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/loginbtn"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="605dp"
        android:layout_marginStart="120dp"
        android:gravity="center"
        android:text="@string/iniciar_session"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="176dp"
        android:layout_marginStart="110dp"
        android:gravity="center"
        android:background="@drawable/usuario"
        android:contentDescription="@string/todo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/nortificacion"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/registrarse"
        android:gravity="center"

        tools:ignore="SpeakableTextPresentCheck" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="485dp"
        android:layout_marginStart="90dp"
        android:gravity="center"
        android:text="@string/recordar"
        android:textSize="16dp"
         />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:gravity="center"
        android:layout_marginTop="530dp"
        android:minHeight="48dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"
        />

</RelativeLayout>